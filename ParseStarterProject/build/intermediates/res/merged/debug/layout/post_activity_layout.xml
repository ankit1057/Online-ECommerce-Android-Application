<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@android:color/white"

    >



    <ScrollView
        android:id="@+id/scroll_view_post"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imageViewDetail"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_launcher"

                />


            <TextView
                android:id="@+id/textView1"
                android:layout_below="@+id/imageViewDetail"
                android:layout_marginTop="10dp"
                android:text="Title :"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <EditText
                android:id="@+id/et_title"
                android:layout_below="@+id/textView1"
                android:hint="Enter title"
                android:singleLine="true"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <TextView
                android:id="@+id/textView2"
                android:layout_below="@+id/et_title"
                android:layout_marginTop="10dp"
                android:text="Price :"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <EditText
                android:id="@+id/et_price"
                android:layout_below="@+id/textView2"
                android:hint="Enter price"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />






        <LinearLayout

            android:id="@+id/layout_region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below= "@id/et_price"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textView3"
                android:layout_gravity="center_vertical"
                android:text="Region"
                android:textSize="20dp"
                android:textColor="@android:color/black"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <Spinner
                android:id="@+id/spinnerRegion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Spinner>


        </LinearLayout>




        <LinearLayout

            android:id="@+id/layout_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below= "@id/layout_region"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textView4"
                android:layout_gravity="center_vertical"
                android:text="Category"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <Spinner
                android:id="@+id/spinnerCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Spinner>


        </LinearLayout>


            <TextView
                android:id="@+id/textView5"
                android:layout_below="@+id/layout_category"
                android:layout_marginTop="10dp"
                android:text="Phone :"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <EditText
                android:id="@+id/et_phone"
                android:layout_below="@+id/textView5"
                android:hint="Enter phone number :"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <TextView
                android:id="@+id/textView6"
                android:layout_below="@+id/et_phone"
                android:layout_marginTop="10dp"
                android:text="Password :"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <EditText
                android:id="@+id/et_password"
                android:layout_below="@+id/textView6"
                android:hint="Enter password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <TextView
                android:id="@+id/textView7"
                android:layout_below="@+id/et_password"
                android:layout_marginTop="10dp"
                android:text="Description :"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <EditText
                android:id="@+id/et_desc"
                android:layout_below="@+id/textView7"
                android:hint="Enter Description :"
                android:inputType="number"
                android:singleLine="false"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <Button
                android:id="@+id/btn_post"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:paddingLeft="20dp"
                android:layout_centerHorizontal="true"
                android:paddingRight="20dp"
                android:layout_below="@+id/et_desc"
                android:text="Submit"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:background="@drawable/selector_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>



    </ScrollView>

</RelativeLayout>